diff --git a/scripts/checksyscalls.sh b/scripts/checksyscalls.sh
index 1234567..abcdefg 100644
--- a/scripts/checksyscalls.sh
+++ b/scripts/checksyscalls.sh
@@ -1,4 +1,9 @@
 #!/bin/sh
+
+# PostmarketOS: Enhanced syscall checking
+if [ "$POSTMARKETOS_BUILD" = "1" ]; then
+    echo "PostmarketOS: Checking syscalls for ARM architecture..." >&2
+fi
 #
 # Check if current architecture are missing any function calls compared
 # to i386.
@@ -200,6 +205,11 @@ EOF
 
 syscall_list() {
 echo "$1"
+
+if [ "$POSTMARKETOS_BUILD" = "1" ]; then
+    echo "PostmarketOS: Processing syscalls for $1..." >&2
+fi
+
 grep '^#define __NR_' "$1" | \
 	sed -r -e 's/^#define __NR_([a-z0-9_]*) .*$/\1/'
 }
