# Maintainer: Felipe Prestes Aranalde <felipe.aranalde@gmail.com>
pkgname=linux-samsung-matisse3g
pkgver=3.4.113
pkgrel=152
pkgdesc="Kernel Linux para Samsung Galaxy Tab 4 10.1 (SM-T531)"
arch="armv7"
_flavor="samsung-matisse3g"
url="https://github.com/felipeflskater/android_kernel_samsung_msm8226"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="bash bc bison devicepkg-dev dtbtool elfutils-dev findutils flex gmp-dev installkernel linux-headers mpc1-dev mpfr-dev perl python3 sed xz"

_commit="pmos-matisse3g-fixes"

source="
	$pkgname-$_commit.tar.gz::https://github.com/Felipeflskater/android_kernel_samsung_msm8226/archive/refs/heads/$_commit.tar.gz
	config-samsung-matisse3g.armv7
	01-fix-timex-header.patch
	03-fix-defconfig.patch
	08-fix-asm-offsets-simple.patch
	10-add-gcc15-conservative-flags.patch
	11-fix-irq-timer-definitions-v2.patch
	12-fix-section-mismatch.patch
	13-disable-stack-protector.patch
	29-fix-lpm-levels-redefinition.patch
	34-fix-assembler-arm-macros.patch
	40-create-compiler-gcc14-header.patch
	55-fix-proc-pid-init-ino.patch
"
builddir="$srcdir/android_kernel_samsung_msm8226-$_commit"

prepare() {
    cd "$builddir"

    # Setup básico
    for comp in armv7-alpine-linux-musleabihf-gcc arm-linux-gnueabihf-gcc; do
        command -v "$comp" >/dev/null 2>&1 && export CROSS_COMPILE="${comp%-gcc}-" && break
    done

    unset LDFLAGS CPPFLAGS CFLAGS CXXFLAGS KCFLAGS AFLAGS
    export ARCH=arm HOSTCC=gcc
    export HOSTCFLAGS="-O1 -w -std=gnu89"
    export KBUILD_CFLAGS="-w -std=gnu89 -marm -mno-thumb-interwork -Wno-error -fno-stack-protector -D__ARM_ARCH_7A__ -D__LINUX_ARM_ARCH__=7"
    export KBUILD_AFLAGS="-D__ASSEMBLY__ -marm -mno-thumb-interwork -fno-stack-protector -D__ARM_ARCH_7A__ -D__LINUX_ARM_ARCH__=7 -Wa,-mno-warn-deprecated"
    export EXTRA_CFLAGS="-w -marm -mno-thumb-interwork -fno-stack-protector -D__ARM_ARCH_7A__ -D__LINUX_ARM_ARCH__=7"

    # Criar headers necessários
    echo "Criando headers globais..."
    mkdir -p include/generated include/config arch/arm/include/generated/asm
    echo '#define UTS_RELEASE "3.4.113"' > include/generated/utsrelease.h
    cat > include/generated/autoconf.h << 'EOF'
#define CONFIG_ARM 1
#define CONFIG_CPU_V7 1
#define CONFIG_MSM_PM 1
#define __LINUX_ARM_ARCH__ 7
EOF
    touch include/generated/asm-offsets.h include/generated/bounds.h

    # Definir __LINUX_ARM_ARCH__ globalmente em arquivos chave
    for f in arch/arm/kernel/asm-offsets.c \
             arch/arm/include/asm/spinlock.h \
             arch/arm/include/asm/atomic.h \
             arch/arm/include/asm/div64.h \
             arch/arm/include/asm/processor.h; do
        if [ -f "$f" ] && ! grep -q "^#define __LINUX_ARM_ARCH__" "$f"; then
            sed -i '1i#ifndef __LINUX_ARM_ARCH__\n#define __LINUX_ARM_ARCH__ 7\n#endif' "$f"
        fi
    done

    # Aplicar patches - ORDEM CRÍTICA!
    echo "Aplicando patches..."
    for p in 01-fix-timex-header.patch \
             03-fix-defconfig.patch \
             08-fix-asm-offsets-simple.patch \
             10-add-gcc15-conservative-flags.patch \
             11-fix-irq-timer-definitions-v2.patch \
             12-fix-section-mismatch.patch \
             13-disable-stack-protector.patch \
             29-fix-lpm-levels-redefinition.patch \
             34-fix-assembler-arm-macros.patch \
             40-create-compiler-gcc14-header.patch \
             55-fix-proc-pid-init-ino.patch; do
        if [ -f "$srcdir/$p" ]; then
            echo "  Aplicando $p..."
            patch -p1 -i "$srcdir/$p" 2>/dev/null || \
            patch -p1 --forward -i "$srcdir/$p" 2>/dev/null || \
            echo "  AVISO: $p pode ter falhado (pode ser normal se já aplicado)"
        fi
    done

    echo "Aplicando correções manuais..."

    # Correção rcupdate.h
    if [ -f include/linux/rcupdate.h ]; then
        echo "Corrigindo rcupdate.h..."
        sed -i 's/^\([[:space:]]*\)BUILD_BUG_ON(!__builtin_constant_p(offset));/\1\/\* BUILD_BUG_ON - Disabled *\//g' include/linux/rcupdate.h
        echo "  ✓ rcupdate.h OK"
    fi

    # Corrigir irqs.h - CRÍTICO!
    if [ -f arch/arm/mach-msm/include/mach/irqs.h ]; then
        echo "Corrigindo irqs.h (removendo #endif órfão)..."
        # Remover linha 136 que contém apenas #endif
        sed -i '136{/^#endif$/d;}' arch/arm/mach-msm/include/mach/irqs.h
        echo "  ✓ irqs.h OK"
    fi

    # Desabilitar CONFIG_THUMB2_KERNEL em todos os lugares
    find . -name "*.h" -o -name "Kconfig*" | xargs sed -i 's/CONFIG_THUMB2_KERNEL/CONFIG_THUMB2_KERNEL_DISABLED/g' 2>/dev/null || true

    # === CORREÇÃO CRÍTICA: Remover macros ARM/THUMB/W/BSYM dos arquivos .S ===
    echo "Removendo macros ARM/THUMB/W/BSYM de TODOS os arquivos assembly..."

    for asm_file in $(find arch/arm -name "*.S" -type f); do
        echo "  Processando $asm_file..."

        # 1. Adicionar .arm no início se não existir
        if ! head -5 "$asm_file" | grep -q "^[[:space:]]*\.arm"; then
            sed -i '1i\.arm' "$asm_file"
        fi

        # 2. Remover arm(...) - extrair apenas o conteúdo
        sed -i 's/\<arm(\([^)]*\))/\1/g' "$asm_file"

        # 3. Remover thumb(...) - apagar completamente
        sed -i 's/\<thumb([^)]*)//g' "$asm_file"

        # 4. Remover W(...) - extrair apenas o conteúdo
        sed -i 's/\<W(\([^)]*\))/\1/g' "$asm_file"
        sed -i 's/\<w(\([^)]*\))/\1/g' "$asm_file"

        # 5. Remover BSYM(...) - extrair apenas o símbolo
        sed -i 's/\<BSYM(\([^)]*\))/\1/g' "$asm_file"

        # 6. Limpar linhas vazias criadas pela remoção de thumb()
        sed -i '/^[[:space:]]*$/d' "$asm_file"
    done

    echo "  ✓ Macros ARM/THUMB/W/BSYM removidos de todos os arquivos .S"

    # board-8226.c - stub
    if [ -f arch/arm/mach-msm/board-8226.c ]; then
        echo "Corrigindo board-8226.c..."
        sed -i '/^static struct of_dev_auxdata msm_hsic_host_adata/,/^};/c\
static void *msm_hsic_host_adata = NULL;' arch/arm/mach-msm/board-8226.c

        sed -i '/^static struct of_dev_auxdata msm8226_auxdata_lookup/,/^};/c\
static void *msm8226_auxdata_lookup = NULL;' arch/arm/mach-msm/board-8226.c
        echo "  ✓ board-8226.c OK"
    fi

    # smd_init_plat.c - stub
    echo "Criando smd_init_plat.c stub..."
    cat > arch/arm/mach-msm/smd_init_plat.c << 'EOF'
#include <linux/module.h>
#include <linux/init.h>
int __init smd_core_init(void) { return 0; }
static int __init msm_smd_driver_init(void) { return smd_core_init(); }
module_init(msm_smd_driver_init);
MODULE_LICENSE("GPL v2");
EOF

    # Makefiles - forçar -marm
    echo "Adicionando flags -marm aos Makefiles..."
    cat >> arch/arm/vfp/Makefile << 'EOF'

CFLAGS_vfpmodule.o += -marm -D__LINUX_ARM_ARCH__=7
CFLAGS_vfpsingle.o += -marm -D__LINUX_ARM_ARCH__=7
CFLAGS_vfpdouble.o += -marm -D__LINUX_ARM_ARCH__=7
AFLAGS_vfphw.o += -D__LINUX_ARM_ARCH__=7
AFLAGS_entry.o += -D__LINUX_ARM_ARCH__=7
EOF

    cat >> arch/arm/kernel/Makefile << 'EOF'

CFLAGS_ptrace.o += -marm -D__LINUX_ARM_ARCH__=7
CFLAGS_process.o += -marm -D__LINUX_ARM_ARCH__=7
AFLAGS_entry-armv.o += -D__LINUX_ARM_ARCH__=7
AFLAGS_entry-common.o += -D__LINUX_ARM_ARCH__=7
EOF

    cat >> arch/arm/mm/Makefile << 'EOF'

CFLAGS_fault.o += -marm -D__LINUX_ARM_ARCH__=7
CFLAGS_init.o += -marm -D__LINUX_ARM_ARCH__=7
AFLAGS_abort-ev7.o += -D__LINUX_ARM_ARCH__=7
AFLAGS_pabort-v7.o += -D__LINUX_ARM_ARCH__=7
AFLAGS_proc-v7.o += -D__LINUX_ARM_ARCH__=7
AFLAGS_cache-v7.o += -D__LINUX_ARM_ARCH__=7
EOF

    # module_param bool -> int
    echo "Convertendo module_param bool para int..."
    find . -name "*.c" -type f -exec sed -i \
        -e 's/module_param[[:space:]]*([[:space:]]*\([^,]*\)[[:space:]]*,[[:space:]]*bool[[:space:]]*,/module_param(\1, int,/g' \
        -e 's/module_param[[:space:]]*([[:space:]]*\([^,]*\)[[:space:]]*,[[:space:]]*_Bool[[:space:]]*,/module_param(\1, int,/g' \
        {} \; 2>/dev/null

    # Corrigir platsmp.c
    if [ -f arch/arm/mach-msm/platsmp.c ]; then
        echo "Corrigindo platsmp.c..."
        sed -i 's/\.cpu_kill[[:space:]]*=.*$/\/\* .cpu_kill - not supported *\//g' arch/arm/mach-msm/platsmp.c
        sed -i 's/\.cpu_die[[:space:]]*=.*$/\/\* .cpu_die - not supported *\//g' arch/arm/mach-msm/platsmp.c
        sed -i 's/\.cpu_disable[[:space:]]*=.*$/\/\* .cpu_disable - not supported *\//g' arch/arm/mach-msm/platsmp.c
        echo "  ✓ platsmp.c OK"
    fi

    # Aplicar config
    cp "$srcdir/config-samsung-matisse3g.armv7" .config

    cat >> .config << 'EOF'
CONFIG_SMP=y
CONFIG_NR_CPUS=4
CONFIG_ARM_UNWIND=y
CONFIG_MSM_PM=y
CONFIG_DEBUG_SECTION_MISMATCH=n
CONFIG_NO_ERROR_ON_MISMATCH=y
CONFIG_HAVE_SMP=y
CONFIG_SMP_ON_UP=y
CONFIG_ARM_CPU_TOPOLOGY=y
CONFIG_SCHED_MC=y
CONFIG_USE_GENERIC_SMP_HELPERS=y
CONFIG_HAVE_ARM_SCU=y
CONFIG_ARM_GIC=y
# CONFIG_THUMB2_KERNEL is not set
CONFIG_ARM_THUMB=y
CONFIG_ARM_ASM_UNIFIED=y
CONFIG_CPU_V7=y
CONFIG_CPU_CORTEX_A7=y
CONFIG_ARCH_MSM8226=y
CONFIG_ARCH_MSM=y
CONFIG_ARM_ERRATA_798181=n
EOF

    make scripts_basic >/dev/null 2>&1 || true
    yes "" | make oldconfig >/dev/null 2>&1 || true

    echo "Preparação concluída!"
}

build() {
    cd "$builddir"
    timeout 2400 make ARCH=arm CROSS_COMPILE="$CROSS_COMPILE" \
        HOSTCFLAGS="$HOSTCFLAGS" KBUILD_CFLAGS="$KBUILD_CFLAGS" \
        KBUILD_AFLAGS="$KBUILD_AFLAGS" EXTRA_CFLAGS="$EXTRA_CFLAGS" \
        CONFIG_NO_ERROR_ON_MISMATCH=y KCFLAGS="-fno-stack-protector" \
        -j$(nproc) zImage || exit 1
    [ -f arch/arm/boot/zImage ] || exit 1
    make modules 2>/dev/null || true
}

package() {
    cd "$builddir"
    install -Dm644 arch/arm/boot/zImage "$pkgdir/boot/vmlinuz-$_flavor"
    make DESTDIR="$pkgdir" modules_install 2>/dev/null || true
    [ -d arch/arm/boot/dts ] && {
        mkdir -p "$pkgdir/boot/dtbs-$_flavor"
        find arch/arm/boot/dts -name "*.dtb" -exec cp {} "$pkgdir/boot/dtbs-$_flavor/" \;
    }
}

